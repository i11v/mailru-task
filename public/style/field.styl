/**
 * Block: field
 */

.field
  display inline-block
  text-align left
  vertical-align top

  &__header
    &__label
      font 300 10pt "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, "Segoe UI Light", Arial, sans-serif

  &__body
    &__separator
      display inline-block
      width 20px
      text-align center

    &__input
      display inline-block
      background $primary-color
      border 0
      outline 0
      padding 0
      margin 0
      font 200 24pt "HelveticaNeue-UltraLight", "Helvetica Neue Ultra Light", "Helvetica Neue", Helvetica, "Segoe UI Light", Arial, sans-serif
      color $alt-color
      placeholder(color $secondary-color,)

      &-code
        width 50px

      &-number
        max-width 240px
