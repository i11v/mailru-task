/**
 * Block: button-send
 */

.button-send
  display inline-block
  background $alt-color
  border 0
  font 300 11pt "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, "Segoe UI Light", sans-serif
  color $primary-color
  padding 5px 20px
  margin 0
  text-shadow none

  &:hover
  &:active
  &:focus
    color $accent-color

  &_disabled
  &:disabled
    background $secondary-color !important
    color $primary-color !important
